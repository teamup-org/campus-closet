<div class="form-wrapper">
  <div class="form-container">
    <% if flash[:alert] %>
      <div class="alert alert-danger" role="alert">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%= form_with url: login_path, local: true do |form| %>
      <div class="form-group">
        <%= form.label :email %>
        <%= form.email_field :email, placeholder: 'Enter your email' %>
      </div>

      <div class="form-group">
        <%= form.label :password %>
        <%= form.password_field :password, placeholder: 'Enter your password' %>
      </div>

      <div class="form-group remember-me">
        <%= form.check_box :remember_me %>
        <%= form.label :remember_me, "Remember me" %>
      </div>

      <div class="form-group">
        <%= form.submit 'Login' %>
      </div>
    <% end %>

    <div class="additional-options">
      <%= link_to 'Forgot password?', '#', class: 'forgot-password-link' %>
    </div>

    <div class="google-signup">
      <%= link_to 'Login with Google', '#', class: 'google-signup-button' %>
    </div>

    <div class="signup-link">
      Don't have an account? <%= link_to 'Sign up', signup_path %>
    </div>
  </div>
</div>
