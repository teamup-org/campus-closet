
<link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css">
<style>
  .swiper-container {
      width: 100%;
      height: 100%;
  }

  .swiper-slide {
      height: 250px;
      display: flex;
      align-items: center;
      justify-content: center;
  }

  .red {
      background-color: red;
  }

  .blue {
      background-color: blue;
  }
</style>
<h1>Carousel#page</h1>
<p>Find me in app/views/carousel/page.html.erb</p>
<%= render 'comp'%>
<!-- Slider main container -->
<div data-controller="carousel" class="swiper-container">
  <!-- Additional required wrapper -->
  <div class="swiper-wrapper">
    <!-- Slides -->
    <div class="swiper-slide red">Slide 1</div>
    <div class="swiper-slide blue">Slide 2</div>
    <div class="swiper-slide red">Slide 3</div>
    <div class="swiper-slide blue">Slide 4</div>
    <div class="swiper-slide red">Slide 5</div>
    <div class="swiper-slide blue">Slide 6</div>
    <div class="swiper-slide red">Slide 7</div>
  </div>
  <!-- Add Pagination -->
  <div class="swiper-pagination"></div>
  <!-- Add Navigation -->
  <div class="swiper-button-next"></div>
  <div class="swiper-button-prev"></div>
</div>

<!-- Swiper JS -->
<script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const swiper = new Swiper('.swiper-container', {
      // Optional parameters
      loop: true,        
      // If we need pagination
      pagination: {
        el: '.swiper-pagination',
      },        
      // Navigation arrows
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      }
    });
  });
</script>
