<style>
  .carousel-control-prev-icon,
  .carousel-control-next-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: rgba(0, 0, 0, 0.8);
    padding: 10px;
    border-radius: 50%;
    width: 40px;
    height: 40px;
}
.carousel {
  width: 100%;
  height: 100%;
  border: 2px black solid;
  background-color: rgba(71, 68, 68, 0.466);
  border-radius: 1em;
}


</style>

<div id="textCarousel" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#textCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#textCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#textCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
    <button type="button" data-bs-target="#textCarousel" data-bs-slide-to="3" aria-label="Slide 4"></button>
    <button type="button" data-bs-target="#textCarousel" data-bs-slide-to="4" aria-label="Slide 5"></button>
    <button type="button" data-bs-target="#textCarousel" data-bs-slide-to="5" aria-label="Slide 6"></button>
    <button type="button" data-bs-target="#textCarousel" data-bs-slide-to="6" aria-label="Slide 7"></button>
  </div>
  
  <div class="carousel-inner">
  <% if @random_items.present? %>
    <% @random_items.each_with_index do |item, index| %>
      <div class="carousel-item <%= 'active' if index == 0 %>">
        <%= render 'item', item: item %>
      </div>
    <% end %>
  <% else %>
    <p>No items available</p>
  <% end %> 
    
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#textCarousel" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true">
    </span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#textCarousel" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true">
      
    </span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
