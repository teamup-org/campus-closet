
<% if flash[:alert] %>
  <div class="alert alert-danger"><%= flash[:alert] %></div>
<% end %>
<div class="container">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <% Type.all.each do |type| %>
      <%= link_to "View " + type.name, items_by_type_path(type: type.name), class: "nav-link" %>
    <% end %>
  </nav>

  <%= form_with url: items_path, method: :get, local: true do %>
    <div class="input-group mb-3">
      <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Search for items..." %>
      <div class="input-group-append">
        <%= submit_tag "Search", class: "btn btn-outline-secondary" %>
      </div>
    </div>
  <% end %>

  <%= render "filter" %>


  <div class="row">
    <% if @items.any? %>
      <% @items.each do |item| %>
        <% if item.status.name == "Available" %>
          <div class="col-md-3 mb-3">
            <div class="card">
              <div class="card-body">
                <%= render item %>
                <p class="card-text">
                  <%= link_to "Show this item", item, class: "btn btn-primary" %>
                </p>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    <% else %>
      <p class="display-5 font-weight-bold text-center">No Results Found</p>
    <% end %>
  </div>
</div>
