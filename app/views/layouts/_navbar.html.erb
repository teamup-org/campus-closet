<style>
  body {
    font-family: 'Comic Sans MS', 'Comic Sans', cursive;
    color: black;
  }

  .logo-img {
    max-width: 50px;
    max-height: 50px;
  }

  .navbar-brand {
    display: flex;
    align-items: center;
    font-size: 20px;
    color: black;
  }

  #navbar-container {
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 1000;
    background-color: #F3F3F3;
    border-bottom: 2px solid black; 
    border-top: 2px solid black;
    padding: 0 25px;
  }

  .navbar-nav {
    margin-left: auto;
    display: flex;
    align-items: center;
  }

  .nav-link {
    font-size: 18px;
    color: black !important;
    text-decoration: underline;
    transition: background-color 0.3s;
  }
</style>

<div id="navbar-container">
  <nav class="navbar navbar-expand-md navbar-light">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">
        <%= image_tag("logo.png", alt: "Logo", class: "logo-img", style: "margin-right: 10px;") %>
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to "Home", "/", class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to "About Us", about_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to "Contact", contact_path, class: 'nav-link' %>
          </li>
          <% if current_user.present? %>
            <% if current_user.student.present? %>
              <li class="nav-item">
                <%= link_to "Student Profile", user_student_path(current_user), class: 'nav-link' %>
              </li>
            <% end %>
        
            <% if current_user.donor.present? %>
              <li class="nav-item">
                <%= link_to "Donor Dashboard", user_donor_path(current_user), class: 'nav-link' %>
              </li>
            <% end %>
          <% end %>
        </ul>
        <div class="navbar-text">
          <% if current_user.present? %>
            <%= button_to 'Logout', signout_path, method: :get, data: { turbo: false } %>
          <% else %>
            <%= button_to 'Login', auth0_login_path, method: :post, data: { turbo: false } %>
          <% end %>
        </div>
      </div>
    </div>
  </nav>
</div>
